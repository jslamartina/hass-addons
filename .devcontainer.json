{
  "name": "Cync Controller Multi-Repo Development",
  "image": "ghcr.io/home-assistant/devcontainer:2-addons",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nodeGypDependencies": true,
      "installYarnUsingApt": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers-community/features/deno": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": true
    },
    "ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {},
    "ghcr.io/eitsupi/devcontainer-features/nushell:0": {}
  },
  "postStartCommand": "bash ${containerWorkspaceFolder}/.devcontainer/post-start.sh",
  "postCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/post-create.sh",
  "runArgs": [
    "--privileged",
    "--memory=16g",
    "-p",
    "8123:8123",
    "-p",
    "4357:4357",
    "-p",
    "1883:1883",
    "-p",
    "23779:23779"
  ],
  "shutdownAction": "none",
  "containerEnv": {
    "WORKSPACE_NAME": "hass-cync-dev",
    "WORKSPACE_DIRECTORY": "${containerWorkspaceFolder}",
    "CONTAINER_WORKSPACE_FOLDER": "${containerWorkspaceFolder}",
    "GIT_EDITOR": "code --wait",
    "SETUP_FRESH_HA": "true"
  },
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "anysphere.cursorpyright",
        "charliermarsh.ruff",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-containers",
        "ms-playwright.playwright",
        "github.vscode-github-actions",
        "timonwong.shellcheck",
        "esbenp.prettier-vscode",
        "bierner.markdown-mermaid",
        "dbaeumer.vscode-eslint",
        "vale.valeCLI"
      ],
      "settings": {
        "terminal.integrated.scrollback": 10000,
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "remote.autoForwardPorts": true,
        "remote.autoForwardPortsSource": "hybrid",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[shellscript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        "prettier.prettierPath": "${containerWorkspaceFolder}/node_modules/prettier",
        "prettier.requireConfig": false,
        "prettier.documentSelectors": ["**/*.sh"],
        "prettier.enable": true,
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "cursorpyright.analysis.typeCheckingMode": "strict",
        "cursorpyright.analysis.useLibraryCodeForTypes": true,
        "cursorpyright.analysis.autoImportCompletions": true,
        "vale.valeCLI.config": "/workspaces/hass-addons/.vale.ini",
        "vale.valeCLI.path": "/usr/local/bin/vale"
      }
    }
  }
}
