{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ruff: Check All Files (cync-controller)",
      "type": "shell",
      "command": "cd cync-controller && ruff check . --output-format=concise 2>&1 | sed 's/\\x1b\\[[0-9;]*m//g'",
      "problemMatcher": {
        "owner": "ruff",
        "fileLocation": ["relative", "${workspaceFolder}/cync-controller"],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(\\w+)\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*$",
          "endsPattern": "^.*$"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Ruff: Check All Files (python-rebuild-tcp-comm)",
      "type": "shell",
      "command": "cd python-rebuild-tcp-comm && ruff check . --output-format=concise 2>&1 | sed 's/\\x1b\\[[0-9;]*m//g'",
      "problemMatcher": {
        "owner": "ruff",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/python-rebuild-tcp-comm"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(\\w+)\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*$",
          "endsPattern": "^.*$"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Ruff: Check All Files (Both Projects)",
      "dependsOn": [
        "Ruff: Check All Files (cync-controller)",
        "Ruff: Check All Files (python-rebuild-tcp-comm)"
      ],
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    }
  ]
}
