# Coverage configuration for pytest-cov
# See: https://coverage.readthedocs.io/

[run]
source = src/cync_lan
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    */venv/*

[report]
# Show lines that weren't covered
show_missing = True

# Precision for coverage percentage
precision = 2

# Skip files with 100% coverage in the report
skip_covered = False

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about protocol methods
    \.\.\.$

[html]
# Directory for HTML coverage reports
directory = htmlcov

[xml]
# XML coverage report for CI/CD
output = coverage.xml

