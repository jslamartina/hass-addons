{
  "mcpServers": {
    "web_fetch": {
      "command": "uv",
      "args": ["run", "--with", "mcp-server-fetch", "mcp-server-fetch"]
    },
    "docker": {
      "command": "uv",
      "args": ["run", "--with", "mcp-server-docker", "mcp-server-docker"]
    },
    "git": {
      "command": "uv",
      "args": ["run", "--with", "mcp-server-git", "mcp-server-git"]
    },
    "python": {
      "command": "uv",
      "args": [
        "run",
        "--with",
        "mcp-python-interpreter",
        "mcp-python-interpreter",
        "--dir",
        "/mnt/supervisor/addons/local/hass-addons",
        "--python-path",
        "/usr/local/bin/python3"
      ]
    },
    "time": {
      "command": "uv",
      "args": [
        "run",
        "--with",
        "mcp-server-time",
        "mcp-server-time",
        "--local-timezone=America/Chicago"
      ]
    },
    "filesystem": {
      "command": "npm",
      "args": ["exec", "-y", "@modelcontextprotocol/server-filesystem"]
    },
    "sequential-thinking": {
      "command": "uv",
      "args": [
        "run",
        "--with",
        "sequential-thinking-mcp",
        "sequential-thinking-mcp"
      ]
    }
  }
}
