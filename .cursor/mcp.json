{
  "mcpServers": {
    "web_fetch": {
      "command": "uvx",
      "args": ["--refresh", "mcp-server-fetch"]
    },
    "docker": {
      "command": "uvx",
      "args": ["--refresh", "mcp-server-docker"]
    },
    "git": {
      "command": "uvx",
      "args": ["--refresh", "mcp-server-git"]
    },
    "python": {
      "command": "uvx",
      "args": [
        "--refresh",
        "mcp-python-interpreter",
        "--dir",
        "/mnt/supervisor/addons/local/hass-addons",
        "--python-path",
        "/usr/local/bin/python3"
      ]
    },
    "time": {
      "command": "uvx",
      "args": [
        "--refresh",
        "mcp-server-time",
        "--local-timezone=America/Chicago"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/mnt/supervisor/addons/local/hass-addons"
      ]
    }
  }
}
