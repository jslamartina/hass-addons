{
  "mcpServers": {
    "web_fetch": {
      "command": "uv",
      "args": ["run", "--with", "mcp-server-fetch", "mcp-server-fetch"]
    },
    "python": {
      "command": "uv",
      "args": [
        "run",
        "--with",
        "mcp-python-interpreter",
        "mcp-python-interpreter",
        "--dir",
        "/mnt/supervisor/addons/local/hass-addons",
        "--python-path",
        "/usr/local/bin/python3"
      ]
    },
    "sequential-thinking": {
      "command": "uv",
      "args": [
        "run",
        "--with",
        "sequential-thinking-mcp",
        "sequential-thinking-mcp"
      ]
    }
  }
}
